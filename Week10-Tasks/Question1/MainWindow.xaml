        xmlns:local="clr-namespace:Question1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TextBlock x:Name="OutputBlock" HorizontalAlignment="Left" Margin="352,244,0,0" TextWrapping="Wrap" VerticalAlignment="Top"/>
        <Label Content="Num1" HorizontalAlignment="Left" Margin="146,118,0,0" VerticalAlignment="Top"/>
        <Label Content="Num2" HorizontalAlignment="Left" Margin="146,149,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="Num1Box" HorizontalAlignment="Left" Height="23" Margin="194,118,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
