        <Button Content="Calculate" HorizontalAlignment="Left" Margin="352,134,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click"/>
        <Label Content="Num1/Num2" HorizontalAlignment="Left" Margin="136,242,0,0" VerticalAlignment="Top"/>
        <Label Content="Num2/Num1" HorizontalAlignment="Left" Margin="317,242,0,0" VerticalAlignment="Top"/>
        <TextBlock x:Name="Res1Block" HorizontalAlignment="Left" Margin="216,247,0,0" TextWrapping="Wrap" VerticalAlignment="Top"/>
        <TextBlock x:Name="Res2Block" HorizontalAlignment="Left" Margin="402,247,0,0" TextWrapping="Wrap" VerticalAlignment="Top"/>

    </Grid>
</Window>
